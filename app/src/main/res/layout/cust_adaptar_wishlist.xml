<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgWLimage"
        android:layout_width="130dp"
        android:layout_height="125dp"
        android:src="@drawable/splash_activity_image" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_margin="15dp"
    android:layout_toRightOf="@+id/imgWLimage">
    <TextView
        android:id="@+id/txtWLArtworkType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artwork Type" />

    <TextView
        android:id="@+id/txtWLPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artwork Price"/>
</LinearLayout>
</RelativeLayout>