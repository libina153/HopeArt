<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imgCustomDetails"
        android:layout_gravity="center"
        android:src="@drawable/splash_activity_image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artwork Type"
        android:id="@+id/txtCustomDetailsArtworkType"
        android:textSize="25dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paper Type"
        android:layout_marginTop="10dp"
        android:id="@+id/txtCustomDetailsPaperType"
        android:textSize="25dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Frame Size"
        android:layout_marginTop="10dp"
        android:id="@+id/txtCustomDetailsFrameSize"
        android:textSize="25dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Action"
        android:layout_marginTop="10dp"
        android:id="@+id/txtCustomDetailsTakeAction"
        android:textSize="25dp"
        />
    <RadioGroup
        android:id="@+id/radiobtnCustomDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#040303"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radiobtn_approved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approved"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/radiobtn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:text="Cancel" />
    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnProceed"
        android:text="Proceed"
        android:layout_gravity="center"
        android:textSize="20dp"/>



</LinearLayout>