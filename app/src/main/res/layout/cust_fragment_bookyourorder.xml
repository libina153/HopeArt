<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallery"
            android:id="@+id/txtCustGallery"
            android:textSize="20dp"
            android:drawableStart="@drawable/ic_cust_gallery"
            android:drawablePadding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:id="@+id/txtCustCamera"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:drawableStart="@drawable/ic_cust_camera"
            android:drawablePadding="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/imgcustBookOrder"
            android:layout_gravity="center"
            android:src="@drawable/splash_activity_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artwork Type"
            android:id="@+id/txtCustBookArtworkType"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paper Type"
            android:layout_marginTop="10dp"
            android:id="@+id/txtCustBookPaperType"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frame Size"
            android:layout_marginTop="10dp"
            android:id="@+id/txtCustBookFrameSize"
            android:textSize="20dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="10dp"
            android:id="@+id/btnCustBookSubmit"
            android:textSize="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>