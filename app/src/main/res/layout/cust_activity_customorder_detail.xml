<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgCustomOrderDetail"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:src="@drawable/splash_activity_image" />

    <TextView
        android:id="@+id/txtCustType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ArtworkType"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/txtCustPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Price"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/txtCustFrameSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Frame Size"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/txtCustPaperType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Paper Type"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/txtCustOrderDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Order Date"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Pay"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Cancel"
            android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>